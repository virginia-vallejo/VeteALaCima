---
import { siteConfig } from '../../data/siteConfig';
import { NAVIGATION_LINKS } from '../../utils/constants';
import { getCurrentYear } from '../../utils/helpers';
import { Mail, Phone, MapPin } from 'lucide-react';

const currentYear = getCurrentYear();
---

<footer class="relative overflow-hidden footer-glass">
  <!-- Línea superior con gradiente sutil -->
  <div class="absolute top-0 left-0 right-0 h-[1px] border-gradient-top"></div>
  
  <!-- Background con glass effect limpio -->
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-[#0a1929]"></div>
  </div>
  
  <!-- Grid pattern sutil -->
  <div class="absolute inset-0 opacity-[0.02] z-[1]">
    <div class="absolute inset-0 bg-grid-pattern"></div>
  </div>
  
  <!-- Blobs de color sutiles -->
  <div class="absolute inset-0 z-0 pointer-events-none">
    <div class="absolute top-20 right-1/4 w-[600px] h-[600px] bg-[#b4cfa6]/5 rounded-full blur-3xl animate-float-subtle"></div>
    <div class="absolute bottom-20 left-1/3 w-[500px] h-[500px] bg-[#66D4FF]/5 rounded-full blur-3xl animate-float-delayed"></div>
  </div>
  

  <div class="container-custom px-4 md:px-8 py-6 sm:py-12 lg:py-16 relative z-10">
    
    <!-- Mobile Layout - Más compacto y organizado -->
    <div class="lg:hidden space-y-6">
      
      <!-- Brand Section Mobile - Compacta -->
      <div class="text-center mb-6">
        <div class="flex items-center justify-center gap-3 mb-3">
          <!-- Logo más pequeño -->
          <div class="relative logo-container group flex-shrink-0">
            <div class="absolute inset-0 bg-[#b4cfa6]/10 rounded-full blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
            
            <img 
              src="/images/logo/logo3d.svg" 
              alt="Vete a la Cima Logo"
              width="500"
              height="500"
              loading="lazy"
              class="relative w-12 h-12 object-contain transition-all duration-500 group-hover:scale-105 footer-logo"
            />
          </div>
          
          <!-- Títulos compactos -->
          <div class="text-left">
            <h3 class="font-heading font-bold text-xs leading-tight text-white mb-0.5">
              VETE A LA CIMA
            </h3>
            <p class="text-[#b4cfa6] text-[10px] font-semibold leading-tight">
              Estrategia, digitalización y crecimiento para el sector veterinario
            </p>
          </div>
        </div>
        
        <!-- Descripción más corta en mobile -->
        <p class="text-white/70 text-[11px] leading-relaxed mb-4 max-w-md mx-auto">
          Consultoría estratégica especializada en negocios veterinarios y empresas del sector pet.
          Acompaño a clínicas, profesionales y organizaciones a tomar mejores decisiones, lanzar nuevos proyectos y construir modelos de crecimiento sostenibles.
        </p>
        
        <!-- Social Links compactos -->
        <div class="flex justify-center gap-2">
          <a 
            href="https://www.instagram.com/vir.veterinaria/" 
            target="_blank" 
            rel="noopener noreferrer"
            class="social-btn-mobile group"
            aria-label="Instagram"
          >
            <svg class="w-4 h-4 text-white transition-transform duration-300 group-hover:scale-110" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
              <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
            </svg>
          </a>
          <a 
            href="https://www.linkedin.com/in/virginiavallejo?utm_source=share&utm_campaign=share_via&utm_content=profile&utm_medium=android_app" 
            target="_blank" 
            rel="noopener noreferrer"
            class="social-btn-mobile group"
            aria-label="LinkedIn"
          >
            <svg class="w-4 h-4 text-white transition-transform duration-300 group-hover:scale-110" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
              <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
              <rect width="4" height="12" x="2" y="9"></rect>
              <circle cx="4" cy="4" r="2"></circle>
            </svg>
          </a>
          <a 
            href={`https://wa.me/${siteConfig.whatsapp}`}
            target="_blank" 
            rel="noopener noreferrer"
            class="social-btn-mobile group"
            aria-label="WhatsApp"
          >
            <svg class="w-4 h-4 text-white transition-transform duration-300 group-hover:scale-110" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
              <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Contacto Mobile - Compacto -->
      <div class="text-center">
        <h3 class="footer-heading-mobile mb-3">
          Contacto
        </h3>
        <ul class="space-y-2 flex flex-col items-center">
          <li class="contact-item-mobile">
            <div class="contact-icon-mobile">
              <Mail size={12} stroke="white" class="!text-white relative z-10" />
            </div>
            <a 
              href={`mailto:${siteConfig.email}`}
              class="text-white/80 hover:text-[#b4cfa6] transition-colors duration-300 text-[11px]"
            >
              {siteConfig.email}
            </a>
          </li>
          <li class="contact-item-mobile">
            <div class="contact-icon-mobile">
              <Phone size={12} stroke="white" class="!text-white relative z-10" />
            </div>
            <a 
              href={`tel:${siteConfig.phone}`}
              class="text-white/80 hover:text-[#b4cfa6] transition-colors duration-300 text-[11px]"
            >
              {siteConfig.phone}
            </a>
          </li>
          <li class="contact-item-mobile">
            <div class="contact-icon-mobile">
              <MapPin size={12} stroke="white" class="!text-white relative z-10" />
            </div>
            <span class="text-white/80 text-[11px]">
              Argentina & Latinoamérica
            </span>
          </li>
        </ul>
      </div>
    </div>
    
    <!-- Desktop Grid - Mejorado y balanceado -->
    <div class="hidden lg:grid grid-cols-12 gap-8 xl:gap-12 items-start">
      
      <!-- Brand - Desktop -->
      <div class="col-span-5">
        <div class="mb-8">
          <div class="flex items-start gap-5 mb-6">
            <div class="relative logo-container group flex-shrink-0">
              <div class="absolute inset-0 bg-[#b4cfa6]/10 rounded-full blur-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-700"></div>
              
              <img 
                src="/images/logo/logo3d.svg" 
                alt="Vete a la Cima Logo"
                width="500"
                height="500"
                loading="lazy"
                class="relative w-24 h-24 object-contain transition-all duration-500 group-hover:scale-105 footer-logo"
              />
            </div>
            
            <div class="text-left flex-1 pt-1">
              <h3 class="font-heading font-bold text-xl block leading-tight text-white mb-2">
                VETE A LA CIMA
              </h3>
              <p class="text-[#b4cfa6] text-sm font-semibold block leading-relaxed">
                Estrategia, digitalización y crecimiento para el sector veterinario
              </p>
            </div>
          </div>
          
          <div class="w-full text-left mb-6">
            <p class="text-white/80 text-sm leading-relaxed">
              Consultoría estratégica especializada en negocios veterinarios y empresas del sector pet.
              Acompaño a clínicas, profesionales y organizaciones a tomar mejores decisiones, lanzar nuevos proyectos y construir modelos de crecimiento sostenibles.
            </p>
          </div>
        </div>
        
        <div class="flex justify-start gap-3">
          <a 
            href="https://www.instagram.com/vir.veterinaria/" 
            target="_blank" 
            rel="noopener noreferrer"
            class="social-btn group"
            aria-label="Instagram"
          >
            <svg class="w-5 h-5 text-white transition-transform duration-300 group-hover:scale-110" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
              <rect width="20" height="20" x="2" y="2" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" x2="17.51" y1="6.5" y2="6.5"></line>
            </svg>
          </a>
          <a 
            href="https://www.linkedin.com/in/virginiavallejo?utm_source=share&utm_campaign=share_via&utm_content=profile&utm_medium=android_app" 
            target="_blank" 
            rel="noopener noreferrer"
            class="social-btn group"
            aria-label="LinkedIn"
          >
            <svg class="w-5 h-5 text-white transition-transform duration-300 group-hover:scale-110" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
              <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
              <rect width="4" height="12" x="2" y="9"></rect>
              <circle cx="4" cy="4" r="2"></circle>
            </svg>
          </a>
          <a 
            href={`https://wa.me/${siteConfig.whatsapp}`}
            target="_blank" 
            rel="noopener noreferrer"
            class="social-btn group"
            aria-label="WhatsApp"
          >
            <svg class="w-5 h-5 text-white transition-transform duration-300 group-hover:scale-110" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
              <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
            </svg>
          </a>
        </div>
      </div>

      <!-- Links Rápidos Desktop -->
      <div class="col-span-2 text-left">
        <h3 class="footer-heading">
          Links Rápidos
          <span class="heading-underline"></span>
        </h3>
        <ul class="space-y-3 flex flex-col items-start">
          {NAVIGATION_LINKS.map((link) => (
            <li>
              <a 
                href={link.href}
                class="footer-link"
              >
                <span class="link-bar"></span>
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Servicios Desktop -->
      <div class="col-span-3 text-left">
        <h3 class="footer-heading">
          Servicios
          <span class="heading-underline"></span>
        </h3>
        <ul class="space-y-3">
          <li>
            <a href="/servicios" class="footer-link">
              <span class="link-bar"></span>
              Negocios veterinarios
            </a>
          </li>
          <li>
            <a href="/servicios" class="footer-link">
              <span class="link-bar"></span>
              Nuevos proyectos
            </a>
          </li>
          <li>
            <a href="/servicios" class="footer-link">
              <span class="link-bar"></span>
              Key opinion leaders
            </a>
          </li>
          <li>
            <a href="/servicios" class="footer-link">
              <span class="link-bar"></span>
              Empresas del sector pet
            </a>
          </li>
          <li>
            <a href="/contacto" class="footer-link">
              <span class="link-bar"></span>
              Consulta general
            </a>
          </li>
        </ul>
      </div>

      <!-- Contacto Desktop -->
      <div class="col-span-2 text-left min-w-0">
        <h3 class="footer-heading">
          Contacto
          <span class="heading-underline"></span>
        </h3>
        <ul class="space-y-4 flex flex-col items-start">
          <li class="contact-item">
            <div class="contact-icon">
              <Mail size={14} stroke="white" class="!text-white relative z-10" />
            </div>
            <a 
              href={`mailto:${siteConfig.email}`}
              class="text-white/80 hover:text-[#b4cfa6] transition-colors duration-300 text-sm break-all"
            >
              {siteConfig.email}
            </a>
          </li>
          <li class="contact-item">
            <div class="contact-icon">
              <Phone size={14} stroke="white" class="!text-white relative z-10" />
            </div>
            <a 
              href={`tel:${siteConfig.phone}`}
              class="text-white/80 hover:text-[#b4cfa6] transition-colors duration-300 text-sm"
            >
              {siteConfig.phone}
            </a>
          </li>
          <li class="contact-item">
            <div class="contact-icon">
              <MapPin size={14} stroke="white" class="!text-white relative z-10" />
            </div>
            <span class="text-white/80 text-sm">
              Argentina & Latinoamérica
            </span>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-white/10 relative z-10 bottom-bar">
    <div class="container-custom px-4 md:px-8 py-4 md:py-6">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4 md:gap-4">
        <p class="text-white/70 text-[11px] md:text-sm text-center md:text-left order-2 md:order-1">
          © {currentYear} {siteConfig.name}. Todos los derechos reservados.
        </p>
        
        <!-- Developer Credit -->
        <a 
          href="https://devcraftpablo.online/" 
          target="_blank" 
          rel="noopener noreferrer"
          class="devcraft-badge group order-1 md:order-2"
        >
          <span class="text-white/70 text-[10px] md:text-sm font-medium">Desarrollado por</span>
          <img 
            src="/images/logo/devcraft.webp" 
            alt="DevCraft Logo" 
            width="150"
            height="50"
            loading="lazy"
            class="h-4 md:h-6 w-auto object-contain transition-all duration-300 group-hover:scale-105"
          />
          <span class="font-bold text-sm md:text-lg devcraft-text">DevCraft</span>
        </a>
        
        <div class="flex gap-4 md:gap-6 order-3">
          <a href="/privacidad" class="text-white/70 hover:text-[#b4cfa6] transition-colors duration-300 text-[11px] md:text-sm">
            Privacidad
          </a>
          <a href="/terminos" class="text-white/70 hover:text-[#b4cfa6] transition-colors duration-300 text-[11px] md:text-sm">
            Términos
          </a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Footer glass morphism limpio */
  .footer-glass {
    background: rgba(10, 25, 41, 0.95);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
  }

  /* Línea superior sutil */
  .border-gradient-top {
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(180, 207, 166, 0.3) 50%,
      transparent 100%
    );
  }

  /* Grid pattern sutil */
  .bg-grid-pattern {
    background-image: 
      radial-gradient(circle at 2px 2px, rgba(255, 255, 255, 0.05) 1px, transparent 0);
    background-size: 40px 40px;
  }

  /* Animaciones sutiles para blobs */
  @keyframes float-subtle {
    0%, 100% { 
      transform: translate(0, 0) scale(1);
      opacity: 0.5;
    }
    50% { 
      transform: translate(20px, -20px) scale(1.1);
      opacity: 0.7;
    }
  }

  @keyframes float-delayed {
    0%, 100% { 
      transform: translate(0, 0) scale(1);
      opacity: 0.5;
    }
    50% { 
      transform: translate(-20px, 20px) scale(1.05);
      opacity: 0.7;
    }
  }

  .animate-float-subtle {
    animation: float-subtle 12s ease-in-out infinite;
  }

  .animate-float-delayed {
    animation: float-delayed 15s ease-in-out infinite;
  }

  /* Logo mejorado */
  .footer-logo {
    filter: brightness(0) invert(1) drop-shadow(0 0 8px rgba(180, 207, 166, 0.3));
    -webkit-filter: brightness(0) invert(1) drop-shadow(0 0 8px rgba(180, 207, 166, 0.3));
    transition: all 0.5s ease;
  }

  .logo-container:hover .footer-logo {
    filter: brightness(0) invert(1) drop-shadow(0 0 15px rgba(180, 207, 166, 0.6));
    -webkit-filter: brightness(0) invert(1) drop-shadow(0 0 15px rgba(180, 207, 166, 0.6));
  }

  /* Social buttons Desktop */
  .social-btn {
    width: 44px;
    height: 44px;
    border-radius: 10px;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .social-btn:hover {
    background: rgba(180, 207, 166, 0.1);
    border-color: rgba(180, 207, 166, 0.3);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(180, 207, 166, 0.2);
  }

  /* Social buttons Mobile - Más pequeños */
  .social-btn-mobile {
    width: 36px;
    height: 36px;
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .social-btn-mobile:hover {
    background: rgba(180, 207, 166, 0.1);
    border-color: rgba(180, 207, 166, 0.3);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(180, 207, 166, 0.2);
  }

  /* Footer headings Desktop */
  .footer-heading {
    font-weight: 600;
    font-size: 1.125rem;
    margin-bottom: 1.5rem;
    position: relative;
    display: inline-block;
    color: white;
  }

  .heading-underline {
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 40px;
    height: 2px;
    background: linear-gradient(90deg, #b4cfa6, transparent);
  }

  /* Footer heading Mobile - Más pequeño */
  .footer-heading-mobile {
    font-weight: 600;
    font-size: 0.813rem;
    color: white;
    position: relative;
    display: inline-block;
  }

  .footer-heading-mobile::after {
    content: '';
    position: absolute;
    bottom: -6px;
    left: 50%;
    transform: translateX(-50%);
    width: 30px;
    height: 2px;
    background: linear-gradient(90deg, #b4cfa6, transparent);
  }

  /* Footer links Desktop */
  .footer-link {
    color: rgba(255, 255, 255, 0.7);
    transition: all 0.3s ease;
    font-size: 0.875rem;
    display: inline-flex;
    align-items: center;
    position: relative;
  }

  .link-bar {
    width: 0;
    height: 2px;
    background: #b4cfa6;
    margin-right: 0;
    transition: all 0.3s ease;
    border-radius: 2px;
  }

  .footer-link:hover {
    color: #b4cfa6;
  }

  .footer-link:hover .link-bar {
    width: 6px;
    margin-right: 8px;
  }

  /* Contact items Desktop */
  .contact-item {
    display: flex;
    align-items: start;
    gap: 0.75rem;
    flex-wrap: nowrap;
  }

  .contact-item a,
  .contact-item span {
    white-space: nowrap;
  }

  .contact-icon {
    width: 36px;
    height: 36px;
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: all 0.3s ease;
  }

  .contact-item:hover .contact-icon {
    background: rgba(180, 207, 166, 0.1);
    border-color: rgba(180, 207, 166, 0.3);
  }

  /* Contact items Mobile - Más compactos */
  .contact-item-mobile {
    display: flex;
    align-items: start;
    gap: 0.5rem;
  }

  .contact-icon-mobile {
    width: 24px;
    height: 24px;
    border-radius: 6px;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: all 0.3s ease;
  }

  .contact-item-mobile:hover .contact-icon-mobile {
    background: rgba(180, 207, 166, 0.1);
    border-color: rgba(180, 207, 166, 0.3);
  }

  /* Bottom bar */
  .bottom-bar {
    background: rgba(10, 25, 41, 0.5);
    backdrop-filter: blur(10px);
  }

  /* DevCraft badge */
  .devcraft-badge {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    padding: 0.5rem 0.875rem;
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(10px);
    border-radius: 10px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
  }

  .devcraft-badge:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(147, 51, 234, 0.3);
    transform: translateY(-2px);
  }

  .devcraft-text {
    background: linear-gradient(135deg, #a78bfa, #818cf8);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  @media (min-width: 768px) {
    .devcraft-badge {
      gap: 0.5rem;
      padding: 0.75rem 1.25rem;
      border-radius: 12px;
    }
  }
</style>