---
import { siteConfig } from '../../data/siteConfig.js';
import GoogleAnalytics from '../analytics/GoogleAnalytics.astro';
import MetaPixel from '../analytics/MetaPixel.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: string;
}

const {
  title = siteConfig.name,
  description = siteConfig.description,
  image = `${siteConfig.url}/images/about/vir1.webp`,
  type = 'website'
} = Astro.props;

const fullTitle = title === siteConfig.name ? title : `${title} | ${siteConfig.name}`;

// Construir URLs completas para Open Graph
const pageUrl = `${siteConfig.url}${Astro.url.pathname}`;
const ogImage = image.startsWith('http') ? image : `${siteConfig.url}${image.startsWith('/') ? image : '/' + image}`;
---

<!-- Meta Tags Esenciales -->
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta name="generator" content={Astro.generator} />

<!-- SEO -->
<title>{fullTitle}</title>
<meta name="description" content={description} />
<link rel="canonical" href={pageUrl} />
<meta name="author" content={siteConfig.author} />
<meta name="google-site-verification" content="viuc0VazxwGWK3lkOcTiVHlK5peOqsmyrFnHSchBukA" />

<!-- Keywords para SEO -->
<meta name="keywords" content="consultoría veterinaria, veterinaria coaching, gestión clínica veterinaria, marketing veterinario, crecimiento veterinaria, digitalización veterinaria, Virginia Vallejo, vete a la cima, consultoría estratégica veterinarios, aumentar facturación veterinaria, transformación digital veterinarias, Mishmoshos, hotel para gatos, hoteles felinos, cuidado gatos, guardería gatos, Virginia Vallejo Mishmoshos" />

<!-- Información geográfica -->
<meta name="geo.region" content="AR" />
<meta name="geo.placename" content="Argentina" />
<meta name="language" content="es-AR" />

<!-- Robots -->
<meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />

<!-- Open Graph / WhatsApp - Optimizado para WhatsApp y redes sociales -->
<meta property="og:type" content={type} />
<meta property="og:url" content={pageUrl} />
<meta property="og:title" content={fullTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:type" content="image/webp" />
<meta property="og:site_name" content={siteConfig.name} />
<meta property="og:locale" content="es_AR" />

<!-- Twitter / X -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={pageUrl} />
<meta name="twitter:title" content={fullTitle} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImage} />

<!-- WhatsApp - Meta específico -->
<meta property="og:image:secure_url" content={ogImage} />

<!-- Favicon y App Icons -->
<link rel="icon" type="image/svg+xml" sizes="32x32" href="/images/logo/logo.svg" />
<link rel="icon" type="image/svg+xml" sizes="16x16" href="/images/logo/logo.svg" />
<link rel="apple-touch-icon" sizes="180x180" href="/images/logo/logo.svg" />
<link rel="shortcut icon" href="/images/logo/logo.svg" />

<!-- PWA Manifest -->
<link rel="manifest" href="/manifest.json" />

<!-- Theme Color -->
<meta name="theme-color" content="#3e6680" />
<meta name="apple-mobile-web-app-capable" content="yes" />
<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
<meta name="apple-mobile-web-app-title" content="Vete a la Cima" />
<meta name="mobile-web-app-capable" content="yes" />

<!-- Resource Hints - Optimización de red -->
<link rel="dns-prefetch" href="https://www.vetealacima.com" />
<link rel="dns-prefetch" href="https://fonts.googleapis.com" />
<link rel="dns-prefetch" href="https://fonts.gstatic.com" />
<link rel="dns-prefetch" href="https://cdn.sanity.io" />

<!-- Preload Critical Resources - OPTIMIZADO para LCP -->
<link rel="preload" as="image" href="/images/logo/logo3d.svg" fetchpriority="high" />
<!-- Precargar imagen hero crítica para LCP -->
<link rel="preload" as="image" href="/images/about/vir8.webp" fetchpriority="high" media="(max-width: 767px)" />
<link rel="preload" as="image" href="/images/about/vir10.webp" fetchpriority="high" media="(min-width: 768px)" />
<!-- Preconnect y DNS Prefetch para Google Fonts -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link rel="dns-prefetch" href="https://fonts.googleapis.com" />

<!-- Preload de fuentes críticas -->
<link rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Poppins:wght@600;700&family=Montserrat:wght@500;600&display=swap" />

<!-- Fonts - Carga asíncrona para no bloquear renderizado -->
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Poppins:wght@600;700&family=Montserrat:wght@500;600&display=swap" rel="stylesheet" media="print" onload="this.media='all'; this.onload=null;" />

<!-- Fallback para navegadores sin JS -->
<noscript>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Poppins:wght@600;700&family=Montserrat:wght@500;600&display=swap" rel="stylesheet" />
</noscript>

<!-- Analytics -->
<GoogleAnalytics />
<MetaPixel />

<!-- Structured Data - Schema.org -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "ProfessionalService",
  "name": "Vete a la Cima - Consultoría Veterinaria",
  "alternateName": "Vete a la Cima",
  "image": [
    "${siteConfig.url}/images/about/vir1.webp",
    "${siteConfig.url}/images/about/vir8.webp",
    "${siteConfig.url}/images/about/vir10.webp"
  ],
  "@id": "${siteConfig.url}",
  "url": "${siteConfig.url}",
  "telephone": "${siteConfig.phone}",
  "email": "${siteConfig.email}",
  "address": {
    "@type": "PostalAddress",
    "addressCountry": "AR",
    "addressRegion": "Argentina",
    "addressLocality": "Argentina"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "addressCountry": "AR"
  },
  "priceRange": "$$$",
  "description": "Consultoría estratégica para veterinarios. Transformá tu clínica veterinaria en un negocio rentable y escalable con métodos probados. Más de 15 años de experiencia.",
