    "@type": "Person",
    "name": "Virginia Vallejo",
    "jobTitle": "Veterinaria y Consultora Estratégica",
    "image": "${siteConfig.url}/images/about/vir1.webp",
    "url": "${siteConfig.url}/sobre-mi",
    "sameAs": [
      "${siteConfig.social.instagram}",
      "${siteConfig.social.linkedin}"
    ]
  },
  "areaServed": [
    {
      "@type": "Country",
      "name": "Argentina"
    },
    {
      "@type": "Country", 
      "name": "España"
    },
    {
      "@type": "Country",
      "name": "México"
    },
    {
      "@type": "Country",
      "name": "Chile"
    },
    {
      "@type": "Country",
      "name": "Colombia"
    },
    {
      "@type": "Country",
      "name": "Perú"
    }
  ],
  "serviceType": ["Consultoría Estratégica Veterinaria", "Coaching Empresarial", "Marketing Digital", "Transformación Digital"],
