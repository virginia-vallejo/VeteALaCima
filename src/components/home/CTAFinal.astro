---
import Button from '../shared/Button.astro';
import { siteConfig } from '../../data/siteConfig';
import { formatWhatsAppLink } from '../../utils/helpers';

const whatsappLink = formatWhatsAppLink(siteConfig.whatsapp, siteConfig.whatsappMessage);
---

<section class="section-padding relative overflow-hidden cta-final-section">
  <!-- Enterprise Gradient Background -->
  <div class="absolute inset-0 z-0">
    <!-- Base gradient matching blog hero -->
    <div class="absolute inset-0 bg-gradient-to-br from-[#294a5f] via-[#3e6680] to-[#b4cfa6]"></div>
  </div>

  <div class="container-custom relative z-10">
    <div class="max-w-5xl mx-auto">
      <!-- Main CTA Card - Glassmorphism -->
      <div class="relative group cta-card-entrance">
