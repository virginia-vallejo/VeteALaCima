</section>

<style>
  /* Orb animations */
  .cta-orb-1 {
    animation: float-cta-1 20s ease-in-out infinite;
  }
  
  .cta-orb-2 {
    animation: float-cta-2 25s ease-in-out infinite;
  }
  
  @keyframes float-cta-1 {
    0%, 100% { transform: translate(0, 0) scale(1); }
    50% { transform: translate(-30px, 30px) scale(1.1); }
  }
  
  @keyframes float-cta-2 {
    0%, 100% { transform: translate(0, 0) scale(1); }
    50% { transform: translate(30px, -30px) scale(1.1); }
  }
  
  /* Glow pulse */
  .cta-glow {
    animation: glow-pulse-cta 3s ease-in-out infinite;
  }
  
  @keyframes glow-pulse-cta {
    0%, 100% { opacity: 0.6; transform: scale(1); }
    50% { opacity: 1; transform: scale(1.05); }
  }
  
  /* Entrance animations */
  .cta-card-entrance {
    animation: card-entrance 1s cubic-bezier(0.23, 1, 0.32, 1) 0.2s both;
  }
  
  @keyframes card-entrance {
    0% { opacity: 0; transform: translateY(50px) scale(0.95); }
    100% { opacity: 1; transform: translateY(0) scale(1); }
  }
  
  .cta-logo-entrance {
    animation: logo-entrance-cta 1s cubic-bezier(0.23, 1, 0.32, 1) 0.4s both;
  }
  
  @keyframes logo-entrance-cta {
    0% { opacity: 0; transform: scale(0.5) rotate(-10deg); }
    100% { opacity: 1; transform: scale(1) rotate(0deg); }
  }
  
  .cta-logo-float {
    animation: logo-float-cta 6s ease-in-out infinite;
  }
  
  @keyframes logo-float-cta {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
  }
  
  .cta-icon-pulse {
    animation: icon-pulse-cta 2s ease-in-out infinite;
  }
  
  @keyframes icon-pulse-cta {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
  }
  
  .cta-badge-entrance {
    animation: badge-entrance-cta 0.8s cubic-bezier(0.23, 1, 0.32, 1) 0.6s both;
  }
  
  @keyframes badge-entrance-cta {
    0% { opacity: 0; transform: translateY(-20px); }
    100% { opacity: 1; transform: translateY(0); }
  }
  
  .cta-title-entrance {
    animation: title-entrance-cta 0.8s cubic-bezier(0.23, 1, 0.32, 1) 0.7s both;
  }
  
  @keyframes title-entrance-cta {
    0% { opacity: 0; transform: translateY(30px); }
    100% { opacity: 1; transform: translateY(0); }
  }
  
  .cta-subtitle-entrance {
    animation: subtitle-entrance-cta 0.8s cubic-bezier(0.23, 1, 0.32, 1) 0.8s both;
  }
  
  @keyframes subtitle-entrance-cta {
    0% { opacity: 0; transform: translateY(20px); }
    100% { opacity: 1; transform: translateY(0); }
  }
  
  .cta-buttons-entrance {
    animation: buttons-entrance-cta 0.8s cubic-bezier(0.23, 1, 0.32, 1) 0.9s both;
  }
  
  @keyframes buttons-entrance-cta {
    0% { opacity: 0; transform: translateY(30px); }
    100% { opacity: 1; transform: translateY(0); }
  }
  
  .cta-trust-entrance {
    animation: trust-entrance-cta 0.8s cubic-bezier(0.23, 1, 0.32, 1) 1s both;
  }
  
  @keyframes trust-entrance-cta {
    0% { opacity: 0; transform: translateY(20px); }
    100% { opacity: 1; transform: translateY(0); }
  }
  
  /* Particles */
  .cta-particle-1,
  .cta-particle-2,
  .cta-particle-3 {
    animation: particle-float-cta 4s ease-in-out infinite;
  }
  
  .cta-particle-2 {
    animation-delay: 1.5s;
  }
  
  .cta-particle-3 {
    animation-delay: 3s;
  }
  
  @keyframes particle-float-cta {
    0%, 100% { transform: translate(0, 0); opacity: 0.3; }
    50% { transform: translate(10px, -10px); opacity: 1; }
  }
  
  .animate-pulse-subtle {
    animation: pulse-subtle 3s ease-in-out infinite;
  }
  
  @keyframes pulse-subtle {
    0%, 100% { opacity: 0.3; }
    50% { opacity: 1; }
  }

  /* Social Media Section Animations */
  .social-card-entrance {
    animation: card-entrance 1s cubic-bezier(0.23, 1, 0.32, 1) 0.3s both;
  }

  .social-glow {
    animation: glow-pulse-cta 3s ease-in-out infinite;
  }

  .social-badge-entrance {
    animation: badge-entrance-cta 0.8s cubic-bezier(0.23, 1, 0.32, 1) 0.5s both;
  }

  .social-title-entrance {
    animation: title-entrance-cta 0.8s cubic-bezier(0.23, 1, 0.32, 1) 0.6s both;
  }

  .social-subtitle-entrance {
    animation: subtitle-entrance-cta 0.8s cubic-bezier(0.23, 1, 0.32, 1) 0.7s both;
  }

  .social-icons-entrance {
    animation: buttons-entrance-cta 0.8s cubic-bezier(0.23, 1, 0.32, 1) 0.8s both;
  }
</style>
