          <div class="relative z-10 text-center">
            <!-- Logo solo - clean -->
            <div class="flex items-center justify-center mb-6 sm:mb-8 cta-logo-entrance">
              <div class="relative w-16 sm:w-20 md:w-24 h-16 sm:h-20 md:h-24">
                <img 
                  src="/images/logo/logo3d2.svg" 
                  alt="Vete a la Cima Logo"
                  width="300"
                  height="300"
                  loading="lazy"
                  class="w-full h-full object-contain filter drop-shadow-[0_0_20px_rgba(255,255,255,0.3)]"
                />
              </div>
            </div>

            <!-- Badge -->
            <div class="inline-block px-6 py-2.5 bg-white/20 backdrop-blur-md rounded-full mb-6 border border-white/30 cta-badge-entrance shadow-lg">
              <span class="text-white font-bold text-sm uppercase tracking-wider">
                ðŸ“ˆ Da el primer paso
              </span>
            </div>

            <!-- Title -->
