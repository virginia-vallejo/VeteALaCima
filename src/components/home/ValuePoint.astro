---
interface Props {
  icon: string;
  title: string;
  description: string;
  index?: number;
  isDark?: boolean;
}

const { icon, title, description, index = 0, isDark = false } = Astro.props;

const iconMap: Record<string, string> = {
  'compass': 'ðŸ§­',
  'rocket': 'ðŸš€',
  'chart': 'ðŸ“Š',
  'growth': 'ðŸ“ˆ',
  'innovation': 'ðŸ’¡'
};
---

<div class={`value-point-card flex items-start gap-6 p-6 md:p-8 rounded-2xl relative overflow-hidden group ${isDark ? 'bg-white/10 backdrop-blur-md border border-white/20' : 'bg-white/50 backdrop-blur-sm'}`}>
  <!-- Hover background glow -->
  <div class="absolute inset-0 bg-gradient-to-r from-azul-electrico/10 to-celeste-tech/10 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
  
  <!-- Left accent line -->
  <div class="absolute left-0 top-0 w-1 h-0 bg-gradient-to-b from-celeste-tech to-azul-electrico group-hover:h-full transition-all duration-500"></div>
  
  <!-- Icon container -->
  <div class="flex-shrink-0 relative z-10">
    <!-- Rotating background -->
    <div class={`absolute inset-0 bg-gradient-to-br ${isDark ? 'from-celeste-tech/30 to-azul-electrico/30' : 'from-azul-electrico/20 to-celeste-tech/20'} rounded-2xl rotate-6 group-hover:rotate-12 transition-transform duration-500`}></div>
    
    <!-- Main icon -->
    <div class={`relative w-16 h-16 md:w-20 md:h-20 rounded-2xl bg-gradient-to-br ${isDark ? 'from-celeste-tech/20 to-azul-electrico/20' : 'from-azul-electrico/10 to-celeste-tech/10'} flex items-center justify-center group-hover:scale-110 transition-all duration-300 value-icon-wrapper`}>
      <span class="text-3xl md:text-4xl value-icon">
        {iconMap[icon] || 'âœ¨'}
      </span>
      
      <!-- Pulse ring -->
      <div class={`absolute inset-0 rounded-2xl border-2 ${isDark ? 'border-celeste-tech/40' : 'border-azul-electrico/30'} value-pulse`}></div>
    </div>
    
    <!-- Glow effect -->
    <div class={`absolute inset-0 ${isDark ? 'bg-celeste-tech/30' : 'bg-azul-electrico/20'} rounded-2xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500`}></div>
  </div>
  
  <!-- Content -->
  <div class="flex-1 relative z-10">
    <h3 class={`font-heading font-bold text-xl md:text-2xl mb-3 transition-colors duration-300 ${isDark ? 'text-white group-hover:text-celeste-tech' : 'text-azul-profundo group-hover:text-azul-electrico'}`}>
      {title}
    </h3>
    <p class={`leading-relaxed text-base md:text-lg ${isDark ? 'text-white/80' : 'text-gris-azulado'}`}>
      {description}
    </p>
    
    <!-- Arrow indicator -->
    <div class={`mt-3 flex items-center gap-2 ${isDark ? 'text-celeste-tech' : 'text-azul-electrico'} opacity-0 group-hover:opacity-100 transition-all duration-500 transform translate-x-0 group-hover:translate-x-2`}>
      <span class="text-sm font-semibold">Ver mÃ¡s</span>
      <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
    </div>
  </div>
  
  <!-- Number badge -->
  <div class="absolute top-4 right-4 w-8 h-8 rounded-full bg-gradient-to-br from-celeste-tech to-azul-electrico flex items-center justify-center text-white text-sm font-bold opacity-0 group-hover:opacity-100 transition-all duration-500 transform scale-0 group-hover:scale-100">
    {index + 1}
  </div>
  
  <!-- Corner decoration -->
  <div class="absolute bottom-0 right-0 w-20 h-20 opacity-0 group-hover:opacity-100 transition-opacity duration-500">
    <div class={`absolute bottom-0 right-0 w-full h-full border-r-2 border-b-2 ${isDark ? 'border-celeste-tech/30' : 'border-celeste-tech/20'} rounded-br-2xl`}></div>
  </div>
</div>

<style>
  /* Card hover effects */
  .value-point-card {
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    border: 1px solid transparent;
  }

  .value-point-card:hover {
    box-shadow: 
      0 20px 40px -10px rgba(31, 162, 255, 0.15),
      0 10px 20px -5px rgba(31, 162, 255, 0.1);
    border-color: rgba(31, 162, 255, 0.1);
  }

  /* Icon animations */
  .value-icon {
    display: inline-block;
    transition: transform 0.3s ease;
  }

  .value-point-card:hover .value-icon {
    animation: icon-wiggle 0.5s ease;
  }

  @keyframes icon-wiggle {
    0%, 100% { transform: rotate(0deg); }
    25% { transform: rotate(-10deg); }
    75% { transform: rotate(10deg); }
  }

  /* Pulse ring animation */
  .value-pulse {
    animation: pulse-ring 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  @keyframes pulse-ring {
    0% {
      opacity: 1;
      transform: scale(1);
    }
    100% {
      opacity: 0;
      transform: scale(1.3);
    }
  }

  /* Icon wrapper glow */
  .value-icon-wrapper {
    box-shadow: 0 4px 20px rgba(31, 162, 255, 0.1);
  }

  .value-point-card:hover .value-icon-wrapper {
    box-shadow: 0 8px 30px rgba(31, 162, 255, 0.25);
  }
</style>
