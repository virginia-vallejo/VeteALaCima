---
interface Props {
  title: string;
  subtitle?: string;
  align?: 'left' | 'center';
  class?: string;
}

const { 
  title, 
  subtitle, 
  align = 'center',
  class: className = ''
} = Astro.props;

const alignClasses = align === 'center' ? 'text-center' : 'text-left';
---

<div class={`${alignClasses} ${className}`}>
  {subtitle && (
    <p class="text-azul-profundo font-semibold text-lg md:text-xl lg:text-2xl uppercase tracking-wide mb-2">
      {subtitle}
    </p>
  )}
  <h2 class="font-heading font-bold text-3xl md:text-4xl lg:text-5xl text-azul-profundo leading-tight">
    {title}
  </h2>
  {Astro.slots.has('default') && (
    <div class="mt-4 text-gris-azulado text-lg md:text-xl max-w-3xl" class:list={align === 'center' && 'mx-auto'}>
      <slot />
    </div>
  )}
</div>
