---
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline' | 'glass' | 'glass-outline';
  size?: 'sm' | 'md' | 'lg';
  type?: 'button' | 'submit';
  class?: string;
}

const { 
  href, 
  variant = 'primary', 
  size = 'md',
  type = 'button',
  class: className = ''
} = Astro.props;

const baseClasses = 'font-button font-medium rounded-lg transition-all duration-300 inline-flex items-center justify-center';

const variantClasses = {
  primary: 'bg-azul-electrico text-white hover:bg-azul-electrico/90 hover:shadow-lg hover:scale-105',
  secondary: 'bg-celeste-tech text-azul-profundo hover:bg-celeste-tech/90 hover:shadow-lg hover:scale-105',
  outline: 'border-2 border-azul-electrico text-azul-electrico hover:bg-azul-electrico hover:text-white hover:shadow-lg',
  glass: 'bg-transparent border-[2.5px] border-[#b4cfa6]/50 text-white backdrop-blur-sm',
  'glass-outline': 'bg-transparent border-[2.5px] border-white/40 text-white backdrop-blur-sm'
};

const sizeClasses = {
  sm: 'px-4 py-2 text-sm',
  md: 'px-6 py-3 text-base',
  lg: 'px-8 py-4 text-lg'
};

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`;
---

{href ? (
  <a href={href} class={classes}>
    <slot />
  </a>
) : (
  <button type={type} class={classes}>
    <slot />
  </button>
)}

<style>
  /* Estilos para variantes glass */
  a.hero-cta-glass-primary,
  button.hero-cta-glass-primary {
    position: relative;
    overflow: hidden;
  }
  
  a.hero-cta-glass-primary::before,
  button.hero-cta-glass-primary::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(180, 207, 166, 0.25) 0%, rgba(62, 102, 128, 0.25) 100%);
    opacity: 0;
    transform: translateY(100%);
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
    z-index: 0;
  }
  
  a.hero-cta-glass-primary::after,
  button.hero-cta-glass-primary::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(90deg, transparent 0%, rgba(180, 207, 166, 0.4) 50%, transparent 100%);
    transform: translateX(-100%);
    transition: transform 0.6s ease;
    z-index: 1;
  }
  
  a.hero-cta-glass-primary:hover::before,
  button.hero-cta-glass-primary:hover::before {
    opacity: 2;
    transform: translateY(0);
  }
  
  a.hero-cta-glass-primary:hover::after,
  button.hero-cta-glass-primary:hover::after {
    transform: translateX(100%);
  }
  
  a.hero-cta-glass-primary:hover,
  button.hero-cta-glass-primary:hover {
    border-color: #b4cfa6 !important;
    color: #b4cfa6 !important;
    box-shadow: 0 0 40px rgba(180, 207, 166, 0.8), 0 0 60px rgba(180, 207, 166, 0.5), 0 0 80px rgba(180, 207, 166, 0.3), inset 0 0 30px rgba(180, 207, 166, 0.2) !important;
    transform: translateY(-3px) scale(1.03) !important;
    animation: pulse-glow 1.5s ease-in-out infinite;
  }

  @keyframes pulse-glow {
    0%, 100% {
      box-shadow: 0 0 40px rgba(180, 207, 166, 0.8), 0 0 60px rgba(180, 207, 166, 0.5), 0 0 80px rgba(180, 207, 166, 0.3), inset 0 0 30px rgba(180, 207, 166, 0.2);
    }
    50% {
      box-shadow: 0 0 50px rgba(180, 207, 166, 1), 0 0 80px rgba(180, 207, 166, 0.7), 0 0 100px rgba(180, 207, 166, 0.5), inset 0 0 40px rgba(180, 207, 166, 0.3);
    }
  }

  a.hero-cta-glass-secondary,
  button.hero-cta-glass-secondary {
    position: relative;
    overflow: hidden;
  }
  
  a.hero-cta-glass-secondary::before,
  button.hero-cta-glass-secondary::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(90deg, rgba(180, 207, 166, 0.2) 0%, rgba(227, 249, 202, 0.2) 100%);
    opacity: 0;
    transform: translateX(-100%);
    transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
    z-index: 0;
  }
  
  a.hero-cta-glass-secondary::after,
  button.hero-cta-glass-secondary::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg, transparent 30%, rgba(180, 207, 166, 0.3) 50%, transparent 70%);
    transform: translateX(-100%) translateY(-100%) rotate(45deg);
    transition: transform 0.7s ease;
    z-index: 1;
  }
  
  a.hero-cta-glass-secondary:hover::before,
  button.hero-cta-glass-secondary:hover::before {
    opacity: 1;
    transform: translateX(0);
  }
  
  a.hero-cta-glass-secondary:hover::after,
  button.hero-cta-glass-secondary:hover::after {
    transform: translateX(100%) translateY(100%) rotate(45deg);
  }
  
  a.hero-cta-glass-secondary:hover,
  button.hero-cta-glass-secondary:hover {
    border-color: #b4cfa6 !important;
    color: #b4cfa6 !important;
    box-shadow: 0 0 30px rgba(180, 207, 166, 0.7), 0 0 50px rgba(180, 207, 166, 0.4), 0 0 70px rgba(180, 207, 166, 0.2), inset 0 0 25px rgba(180, 207, 166, 0.15) !important;
    transform: translateY(-3px) scale(1.03) !important;
    animation: pulse-glow-secondary 1.5s ease-in-out infinite;
  }

  @keyframes pulse-glow-secondary {
    0%, 100% {
      box-shadow: 0 0 30px rgba(180, 207, 166, 0.7), 0 0 50px rgba(180, 207, 166, 0.4), 0 0 70px rgba(180, 207, 166, 0.2), inset 0 0 25px rgba(180, 207, 166, 0.15);
    }
    50% {
      box-shadow: 0 0 40px rgba(180, 207, 166, 0.9), 0 0 70px rgba(180, 207, 166, 0.6), 0 0 90px rgba(180, 207, 166, 0.4), inset 0 0 35px rgba(180, 207, 166, 0.25);
    }
  }
</style>
