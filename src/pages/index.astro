---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/home/Hero.astro';
import Problem from '../components/home/Problem.astro';
import Solution from '../components/home/Solution.astro';
import AboutPreview from '../components/home/AboutPreview.astro';
import CTAFinal from '../components/home/CTAFinal.astro';
import SectionTitle from '../components/shared/SectionTitle.astro';
import FAQAccordion from '../components/react/FAQAccordion.jsx';
---

<Layout 
  title="Vete a la Cima - Consultoría Estratégica para Veterinarias | Virginia Vallejo"
  description="Transformá tu clínica veterinaria en un negocio rentable y escalable. Consultoría estratégica especializada con método probado. +10 años de experiencia en crecimiento de veterinarias. Virginia Vallejo, veterinaria y consultora."
  type="website"
  preloadHeroImages={true}
>
  <!-- Hero Section -->
  <Hero />

  <!-- Problem Section -->
  <Problem />

  <!-- Solution Section -->
  <Solution />

  <!-- About Preview Section -->
  <AboutPreview />

  <!-- FAQ Section -->
  <!-- FAQ Section - Enterprise Dark Style -->
  <section class="section-padding relative overflow-hidden">
    <!-- Enterprise Dark Background -->
    <div class="absolute inset-0 z-0">
      <!-- Base dark gradient -->
      <div class="absolute inset-0 bg-gradient-to-br from-[#0a1929]/80 via-[#0D2A47]/70 to-azul-profundo/80"></div>
      
      <!-- Background Image - More visible -->
      <div 
        class="absolute inset-0 bg-no-repeat opacity-60 pointer-events-none bg-top"
        style="background-image: url(/images/preguntas/fondopreguntas.webp); background-size: 100% auto; background-position: center top;"
      ></div>
      
      <!-- Desktop background override -->
      <style>
        @media (min-width: 768px) {
          section .absolute[style*='fondopreguntas'] {
            background-size: cover !important;
            background-position: center 20% !important;
          }
        }
      </style>
      
      <!-- Subtle dark overlay for depth and readability -->
      <div class="absolute inset-0 bg-[#0a1929]/30"></div>
      <div class="absolute inset-0 bg-gradient-to-t from-[#0a1929]/40 via-transparent to-[#0a1929]/20"></div>
    </div>
    
    <!-- Animated tech pattern overlay -->
    <div class="absolute inset-0 opacity-[0.03] z-[1]">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, rgba(255,255,255,0.1) 1px, transparent 0); background-size: 50px 50px;"></div>
    </div>
    
    <!-- Floating gradient orbs - very subtle -->
    <div class="absolute top-20 left-10 w-96 h-96 bg-[#b4cfa6]/5 rounded-full blur-3xl animate-float-slow z-[1]"></div>
    <div class="absolute bottom-40 right-10 w-80 h-80 bg-celeste-tech/5 rounded-full blur-3xl animate-float-slower z-[1]"></div>
    
    <!-- Diagonal accent lines -->
    <div class="absolute top-0 left-0 w-1/2 h-px bg-gradient-to-r from-transparent via-white/10 to-transparent z-[1]"></div>
    <div class="absolute bottom-0 right-0 w-1/3 h-px bg-gradient-to-r from-transparent via-white/10 to-transparent z-[1]"></div>
    
    <div class="container-custom relative z-10">
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-3 px-6 py-3 bg-white/10 backdrop-blur-md rounded-full mb-6 border border-white/20">
          <img 
            src="/images/logo/logo3d1.svg" 
            alt="Logo" 
            loading="lazy"
            class="h-8 w-8 md:h-10 md:w-10"
          />
          <span class="text-white font-bold text-sm uppercase tracking-wider">
            ¿Tenés dudas?
          </span>
        </div>
        <h2 class="font-heading font-bold text-4xl md:text-5xl lg:text-6xl text-white mb-6 leading-tight" style="text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);">
          Preguntas <span class="text-transparent bg-clip-text bg-gradient-to-r from-celeste-tech to-[#b4cfa6]">frecuentes</span>
        </h2>
        <p class="text-white/80 text-lg md:text-xl max-w-3xl mx-auto" style="text-shadow: 0 1px 3px rgba(0, 0, 0, 0.3);">
          Respondemos las consultas más comunes sobre nuestros servicios
        </p>
      </div>

      <div class="mt-16">
        <FAQAccordion client:visible />
      </div>
    </div>
  </section>

  <!-- CTA Final Section -->
  <CTAFinal />
</Layout>

