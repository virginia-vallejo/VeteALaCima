---
// Redirección directa a Sanity Studio
const SANITY_PROJECT_ID = 'p6e5goy2';
const redirectUrl = `https://www.sanity.io/manage/personal/project/${SANITY_PROJECT_ID}`;

// Redirigir al usuario
if (Astro.request.method === 'GET') {
  return Astro.redirect(redirectUrl, 307);
}
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Redirigiendo a Studio...</title>
  <meta http-equiv="refresh" content={`0;url=${redirectUrl}`}>
  <style>
    body {
      margin: 0;
      padding: 0;
      font-family: system-ui, -apple-system, sans-serif;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background: linear-gradient(135deg, #0A1B2E 0%, #1FA2FF 100%);
      color: white;
    }
    .spinner {
      border: 4px solid rgba(255, 255, 255, 0.1);
      border-radius: 50%;
      border-top: 4px solid white;
      width: 50px;
      height: 50px;
      animation: spin 1s linear infinite;
      margin-bottom: 2rem;
    }
    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
    h1 {
      font-size: 1.5rem;
      margin-bottom: 1rem;
    }
    p {
      opacity: 0.8;
      margin-top: 1rem;
    }
    a {
      color: #66D4FF;
      text-decoration: none;
      margin-top: 2rem;
      padding: 0.75rem 2rem;
      background: rgba(255,255,255,0.1);
      border-radius: 8px;
      transition: background 0.3s;
    }
    a:hover {
      background: rgba(255,255,255,0.2);
    }
  </style>
</head>
<body>
  <div class="spinner"></div>
  <h1>Redirigiendo a Sanity Studio...</h1>
  <p>Si no eres redirigido automáticamente:</p>
  <a href={redirectUrl}>Click aquí para ir al Studio</a>
  
  <script define:inline>
    // Fallback redirect
    setTimeout(() => {
      window.location.href = document.querySelector('a').href;
    }, 2000);
  </script>
</body>
</html>
