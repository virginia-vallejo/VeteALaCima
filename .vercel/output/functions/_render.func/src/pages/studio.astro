---
// Página del Studio embebido de Sanity
// Esta página carga el Studio completo con React desde los módulos de Sanity
export const prerender = false;

import { schemaTypes } from '../../sanity/schemas';
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
    <meta name="robots" content="noindex" />
    <title>Sanity Studio - Vete a la Cima</title>
    <style>
      html, body, #sanity {
        height: 100%;
        margin: 0;
        padding: 0;
        overflow: hidden;
      }
    </style>
  </head>
  <body>
    <div id="sanity"></div>
    <script type="module">
      import { createRoot } from 'https://esm.sh/react-dom@18/client';
      import { Studio } from 'https://unpkg.com/sanity@^4/dist/index.esm.js';

      const root = createRoot(document.getElementById('sanity'));

      const config = {
        name: 'vetealacima',
        title: 'Vete a la Cima - Blog',
        projectId: 'yjqtxju3',
        dataset: 'production',
        basePath: '/studio',
      };

      root.render(Studio({ config }));
    </script>
  </body>
</html>
